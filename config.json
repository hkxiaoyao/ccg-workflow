{
  "version": "1.0",
  "name": "ccg",
  "description": "CCG: Claude Code + Codex + Gemini 多模型协作系统",
  "install_dir": "~/.claude",
  "log_file": "install.log",
  "modules": {
    "core": {
      "enabled": true,
      "description": "核心工作流 - 多模型协作 (Codex + Gemini)",
      "operations": [
        {
          "type": "merge_dir",
          "source": "commands",
          "target": "commands",
          "description": "安装 /ccg:xxx 命令 (17个斜杠命令)"
        },
        {
          "type": "build_go",
          "source": "codeagent-wrapper",
          "binary": "codeagent-wrapper",
          "description": "编译 codeagent-wrapper"
        },
        {
          "type": "install_mcp",
          "description": "交互式选择并安装 MCP 工具（ace-tool 或 auggie）"
        }
      ]
    },
    "codex-only": {
      "enabled": false,
      "description": "仅 Codex 后端（无 Gemini）",
      "operations": [
        {
          "type": "build_go",
          "source": "codeagent-wrapper",
          "binary": "codeagent-wrapper",
          "description": "编译 codeagent-wrapper"
        }
      ]
    },
    "gemini-only": {
      "enabled": false,
      "description": "仅 Gemini 后端（无 Codex）",
      "operations": [
        {
          "type": "build_go",
          "source": "codeagent-wrapper",
          "binary": "codeagent-wrapper",
          "description": "编译 codeagent-wrapper"
        }
      ]
    }
  }
}
